<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :box_file_location %>
  <%= text_input f, :box_file_location %>
  <%= error_tag f, :box_file_location %>

  <%= label f, :opportunity_id %>
  <%= text_input f, :opportunity_id %>
  <%= error_tag f, :opportunity_id %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
